{
  "description": "ER - Kick.com auto message bot with admin panel",
  "version": "1.0",
  "manifest_version": 3,
  "name": "ER",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.worker.js"
  },
  "action": {
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://script.googleusercontent.com/*",
    "https://script.google.com/*",
    "https://api.ipify.org/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}